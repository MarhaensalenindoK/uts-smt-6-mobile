<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_message_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_chat_message_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"> <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_chat_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ini adalah isi pesan chat yang bisa jadi cukup panjang dan terdiri dari beberapa baris."
            android:textColor="@color/chat_text_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" android:layout_marginTop="4dp" android:text="10:00 AM" android:textSize="10sp"
            android:textColor="@color/white_text_secondary" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
